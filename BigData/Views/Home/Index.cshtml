@{
    ViewData["Title"] = "Home Page";
}
@model List<Product>
<div id="mylist" class="card">
        <div class="row m-3">
            <div class="col-10">
                <input type="search" class="search form-control" placeholder="Search here...">
            </div>
            <div class="col-2">
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        Sort
                    </button>
                    <ul class="dropdown-menu">
                        <li class="sort" data-sort="name"><a class="dropdown-item" asp-controller="Home" asp-action="Sort" asp-route-param="name">Sort by name</a></li>
                        <li class="sort" data-sort="price"><a class="dropdown-item" asp-controller="Home" asp-action="Sort" asp-route-param="price">Sort by price</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <ul class="list list-group list-group-flush">
            <div class="d-flex just-content-center mt-2">
                <ul class="pagination"></ul>
            </div>
        </ul>
    </div>
<div>
    <div class="card-columns">
         @foreach (var i in Model)
            {
                if (i.pr_name != null)
                {
                    
                    <div class="card" style="width: 18rem;">
                        <img scr="https://images.hindustantimes.com/tech/img/2022/10/01/960x540/IMG_4709_1663334970035_1664606951740_1664606951740.jpg" class="card-img-top" height="150">
                        <div class="card-body">
                            @if (i.pr_name.Length > 20)
                            {
                                <h5 class="card-title">@i.pr_name.Substring(0, 19) ...</h5>
                            }
                            else
                            {
                                <h5 class="card-title">@i.pr_name</h5>
                            }
                            <p class="card-text">@i.pr_category, @i.pr_origin</p>
                            <a href="#" class="btn btn-primary">@i.pr_price ₸ Купить</a>
                        </div>
                    </div>   
                }
            }
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<script src="list.js"></script>
